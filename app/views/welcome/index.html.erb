<!doctype html>
<html lang="en">
  <head>



  </head>
  <body>

    <title>The TV Database</title>

    <h1>The TV Database</h1>


    <br />
    <br />


    <div class="table-responsive">
      <table class="table table-striped table-hover">

          <thead>
          <tr style="background: #A24EBC">
            <th>Poster</th>
            <th>Name</th>
            <th>Ranking</th>
          </tr>
        </thead>
        <tbody>
          <% for i in @tv_shows["results"] do %>
          <tr>
            <td>
                <% if !i["poster_path"].nil? %>
                   <a class="active"> <%= image_tag ("https://image.tmdb.org/t/p/w370_and_h556_bestv2/" + i["poster_path"]), :style => "border: 1px solid black", :size => "200" %></a>

                  </td>
                  <td><%= link_to i["name"], tv_shows_show_path(:id => i["id"]) %></td>
                  <td><%= i["popularity"] %></td>
                <% end %>
          </tr>
          <% end %>
        </tbody>

    </table>
  </div>


  </body>
</html>
